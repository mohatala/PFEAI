<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:theme="@style/ToolbarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">


                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/todo"
                    android:scaleX="-1"
                    android:src="@drawable/arrow_pink" />


                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/popind_regular"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/ideal_chart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv1"
                style="@style/AppTheme.fontstylesBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/should_not_donate"
                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:id="@+id/tv2"
                style="@style/AppTheme.fontstylesRegular"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/should_not_donate_desc"
                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:id="@+id/tv3"
                style="@style/AppTheme.fontstylesBold"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/may_not_give"
                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:id="@+id/tv4"
                style="@style/AppTheme.fontstylesRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/may_not_give_desc"
                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:id="@+id/tv5"
                style="@style/AppTheme.fontstylesBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/should_never_give"
                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:id="@+id/tv6"
                style="@style/AppTheme.fontstylesRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/should_never_give_desc"
                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:id="@+id/tv7"
                style="@style/AppTheme.fontstylesBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/should_never_give_12"

                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:id="@+id/tv8"
                style="@style/AppTheme.fontstylesRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/should_never_give__desc"
                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:id="@+id/tv9"
                style="@style/AppTheme.fontstylesBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/pregnancy_header"

                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:id="@+id/tv10"
                style="@style/AppTheme.fontstylesRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pregnancy_desc2"
                android:textColor="?attr/colorPrimary"
                android:textDirection="locale"
                android:textSize="@dimen/font_size_15" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
